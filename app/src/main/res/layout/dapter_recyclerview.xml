<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_pic"
            android:id="@+id/screen1_image_item"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Báo cáo Xuất khẩu thủy sản việt nam quý III"
            android:id="@+id/screen1_title_item"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textAllCaps="true"
            android:textColor="@color/screen1_title_item"
            android:textSize="@dimen/screen1_title_item"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Báo cáo"
                android:id="@+id/screen_category_item"
                android:textAllCaps="true"
                android:textColor="@color/screen1_category"
                android:textSize="@dimen/screen1_category"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:background="@color/primary"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/11/2016"
                android:id="@+id/screen_date_item"
                android:textAllCaps="true"
                android:textColor="@color/screen1_date_item"
                android:textSize="@dimen/screen1_date_item"
                />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>