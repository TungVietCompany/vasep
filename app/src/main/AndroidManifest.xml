<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vasep">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ToolbarActivity"
            android:label="@string/title_activity_toolbar"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.FeatureActivity"
            android:label="@string/title_activity_feature"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.NewsDetailActivity"
            android:label="@string/title_activity_news_detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.SpecialDetailActivity"
            android:label="@string/title_activity_news_detail"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.ReportDetailActivity" />
        <activity android:name=".activity.ContactActivity" />
        <activity android:name=".activity.PurchaseActivity" />
        <activity android:name=".activity.ShowDetailActivity"></activity>
    </application>

</manifest>